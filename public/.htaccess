<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Proxy blog share requests to Supabase edge function for OG previews
  RewriteRule ^share/blog/(.+)$ https://lgrugpsyewvinlkgmeve.supabase.co/functions/v1/blog-share?slug=$1 [P,L]

  # Fallback redirect if mod_proxy is not available
  RewriteCond %{REQUEST_URI} ^/share/blog/(.+)$
  RewriteRule ^share/blog/(.+)$ https://lgrugpsyewvinlkgmeve.supabase.co/functions/v1/blog-share?slug=$1 [R=302,L]

  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteRule . /index.html [L]
</IfModule>